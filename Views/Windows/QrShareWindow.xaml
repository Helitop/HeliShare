<ui:FluentWindow x:Class="HeliShare.Views.Windows.QrShareWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Поделиться с телефоном" Height="550" Width="350"
    WindowStartupLocation="CenterScreen" Topmost="True" MouseLeftButtonDown="Window_MouseLeftButtonDown" ResizeMode="NoResize"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    ExtendsContentIntoTitleBar="True">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Отсканируйте камерой" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <ui:Card Width="250" Height="250" Padding="0">
            <Grid>

            <ui:Image x:Name="QrImage" Width="250" Height="250" RenderOptions.BitmapScalingMode="NearestNeighbor" CornerRadius="25">
                <ui:Image.Effect>
                    <BlurEffect x:Name="QrBlur" Radius="0"/>
                </ui:Image.Effect>
            </ui:Image>
            <ui:ImageIcon Source="/Assets/wpfui-icon-1024.png" Width="75" Height="75">
                <ui:ImageIcon.Effect>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="0"/>
                </ui:ImageIcon.Effect>
            </ui:ImageIcon>
            </Grid>
        </ui:Card>
        <TextBlock Text="Выберите сетевой интерфейс:" FontSize="11" Opacity="0.6" Margin="0,15,0,5" HorizontalAlignment="Center"/>
        <ComboBox x:Name="IpComboBox" 
             HorizontalAlignment="Center" 
             Width="260"
             SelectionChanged="IpComboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ui:SymbolIcon Symbol="{Binding Icon}" Margin="0,0,-20,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Margin="35,0,0,0">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                            <!-- Добавляем реальное название железки -->
                            <TextBlock Text="{Binding Description}" FontSize="10" Opacity="0.5" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding IpAddress}" FontSize="10" FontWeight="Bold" Opacity="0.8" Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <ui:HyperlinkButton x:Name="UrlText" Opacity="0.5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
            <ui:Button Padding="7" Margin="5,0,0,0" Appearance="Transparent" Click="Copy_Click" VerticalAlignment="Center">
                <ui:SymbolIcon Symbol="Copy24"/>
            </ui:Button>
        </StackPanel>
        <ui:Button Content="Закрыть" Click="Close_Click" HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </StackPanel>
</ui:FluentWindow>